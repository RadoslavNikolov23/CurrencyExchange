<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exchange Rate Table</title>

    <link rel="stylesheet" href="~/css/styleOnePageTable.css" />


</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        // Adding selection behavior for rows
        document.querySelectorAll("tr").forEach(function(row) {
            row.addEventListener("click", function() {
                document.querySelectorAll("tr").forEach(function(innerRow) {
                    innerRow.classList.remove("selected");
                });
                row.classList.add("selected");
            });
        });
    </script>
</body>
</html>

<footer>
    <p>&copy; @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year </p>
</footer>


@RenderSection("Scripts", required: false)

